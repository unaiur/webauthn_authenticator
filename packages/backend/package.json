{
  "name": "backend",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/bin dist/views dist/public",
    "prebuild": "npm run clean",
    "build": "eslint src && tsup && cpx \"views/**\" dist/views && cpx \"../frontend/dist/**\" dist/public",
    "preserve": "npm run build",
    "serve": "NODE_ENV=development DB_SYNC=true npm-run-all -p \"serve:**\"",
    "serve:views": "cpx \"views/**\" dist/views -w",
    "serve:auth": "cpx \"../frontend/dist/**\" dist/public -w",
    "serve:tsup": "tsup --watch --onSuccess 'cd dist && JWT_SECRET='012345678912' bin/app.cjs'",
    "prestart": "npm run build",
    "start": "cd dist && NODE_ENV=production node bin/index.js",
    "test": "jest",
    "t": "jest --watch",
    "lint": "eslint src --fix"
  },
  "devDependencies": {
    "@simplewebauthn/server": "^8.2.0",
    "@simplewebauthn/typescript-types": "^8.0.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/better-sqlite3": "^7.6.5",
    "@types/eslint": "^8.44.3",
    "@types/express": "^4.17.14",
    "@types/hbs": "^4.0.2",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "cpx2": "^5.0.0",
    "eslint": "^8.50.0",
    "express": "^4.18.2",
    "hbs": "^4.2.0",
    "helmet": "^7.0.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "tmp-promise": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-jest-mocker": "^0.5.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typeorm": "^0.3.17",
    "typescript": "^5.2.2",
    "winston": "^3.11.0"
  },
  "dependencies": {
    "better-sqlite3": "^8.7.0"
  }
}
