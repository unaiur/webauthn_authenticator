{
  "name": "backend",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/bin dist/views dist/public",
    "prebuild": "npm run clean",
    "build": "cpx \"views/**\" dist/views && cpx \"../frontend/dist/**\" dist/public && eslint src && tsc",
    "preserve": "npm run build",
    "serve": "NODE_ENV=development npm-run-all -p \"serve:**\"",
    "serve:views": "cpx \"views/**\" dist/views -w",
    "serve:auth": "cpx \"../frontend/dist/**\" dist/public -w",
    "serve:tsc": "tsc --watch",
    "serve:code": "cd dist && nodemon -w bin -q bin/index.js",
    "prestart": "npm run build",
    "start": "cd dist && NODE_ENV=production node bin/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --fix"
  },
  "devDependencies": {
    "@simplewebauthn/typescript-types": "^8.0.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/better-sqlite3": "^7.6.5",
    "@types/eslint": "^8.44.3",
    "@types/express": "^4.17.14",
    "@types/hbs": "^4.0.2",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^6.7.3",
    "cpx2": "^5.0.0",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@simplewebauthn/server": "^8.2.0",
    "better-sqlite3": "^8.7.0",
    "express": "^4.18.2",
    "hbs": "^4.2.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  }
}

